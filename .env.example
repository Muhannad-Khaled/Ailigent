# ============================================
# AILIGENT SUITE - ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# The .env file is gitignored and safe for local use

# ============================================
# ODOO CONFIGURATION (Required)
# ============================================
ODOO_URL=https://your-odoo-instance.odoo.com
ODOO_DB=your_database_name
ODOO_USER=your_username
ODOO_PASSWORD=your_password

# ============================================
# API AUTHENTICATION (Required)
# ============================================
# API keys for each service - change these in production!
API_KEY=ailigent-api-key-2024

# Service-specific API keys (optional, falls back to API_KEY)
EMPLOYEE_AGENT_API_KEY=ailigent-employee-api-key-2024
CONTRACTS_AGENT_API_KEY=ailigent-contracts-api-key-2024
HR_AGENT_API_KEY=ailigent-hr-api-key-2024
TASK_MANAGEMENT_API_KEY=ailigent-task-api-key-2024

# ============================================
# GOOGLE GEMINI AI (Required for AI features)
# ============================================
GEMINI_API_KEY=your-gemini-api-key

# ============================================
# TELEGRAM BOT (Required for employee-agent)
# ============================================
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# ============================================
# LIVEKIT (Required for voice-agent)
# ============================================
LIVEKIT_URL=wss://your-livekit-server.livekit.cloud
LIVEKIT_API_KEY=your-livekit-api-key
LIVEKIT_API_SECRET=your-livekit-api-secret

# ============================================
# EMAIL CONFIGURATION (Optional)
# ============================================
# Used for OTP verification and notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# ============================================
# SERVICE PORTS (Optional - defaults shown)
# ============================================
EMPLOYEE_AGENT_PORT=8000
CONTRACTS_AGENT_PORT=8001
HR_AGENT_PORT=8002
TASK_MANAGEMENT_PORT=8003
VOICE_AGENT_PORT=8004

# ============================================
# APPLICATION SETTINGS (Optional)
# ============================================
DEBUG=false
LOG_LEVEL=INFO
HOST=0.0.0.0

# CORS - comma separated origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================
# REDIS (Optional - for caching)
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# WEBHOOKS (Optional - for notifications)
# ============================================
WEBHOOK_URL=https://your-webhook-endpoint.com/webhook
WEBHOOK_SECRET=your-webhook-secret

# ============================================
# INTER-SERVICE COMMUNICATION (Optional)
# ============================================
# URLs for services to communicate with each other
EMPLOYEE_AGENT_URL=http://localhost:8000
CONTRACTS_AGENT_URL=http://localhost:8001
HR_AGENT_URL=http://localhost:8002
TASK_MANAGEMENT_URL=http://localhost:8003
VOICE_AGENT_URL=http://localhost:8004

# ============================================
# SCHEDULER SETTINGS (Optional)
# ============================================
# Cron expressions for scheduled jobs
EXPIRY_CHECK_CRON=0 9 * * *
ANOMALY_CHECK_CRON=0 8 * * *
REPORT_GENERATION_CRON=0 6 * * 1
