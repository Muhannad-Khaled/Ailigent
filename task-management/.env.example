# Application
APP_NAME=task-management-agent
APP_ENV=development
DEBUG=true
API_KEY=your-secure-api-key-here

# Odoo Connection
ODOO_URL=http://localhost:8069
ODOO_DB=odoo_db
ODOO_USER=admin
ODOO_PASSWORD=admin_password

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# Webhooks
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_OVERDUE_URL=https://your-webhook.com/overdue
WEBHOOK_ASSIGNMENT_URL=https://your-webhook.com/assigned
WEBHOOK_REPORT_URL=https://your-webhook.com/reports
WEBHOOK_MANAGER_URL=https://your-webhook.com/manager-alerts

# Manager Notifications (comma-separated)
MANAGER_EMAILS=manager1@company.com,manager2@company.com

# Scheduler
SCHEDULER_TIMEZONE=UTC

# Logging
LOG_LEVEL=INFO
