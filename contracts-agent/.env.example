# Application
APP_NAME=contracts-agent
APP_ENV=development
DEBUG=true
API_KEY=your-secure-api-key
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8001

# Odoo Connection
ODOO_URL=http://localhost:8069
ODOO_DB=odoo_db
ODOO_USER=admin
ODOO_PASSWORD=admin_password

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# Webhooks (to task-management)
WEBHOOK_SECRET=shared-webhook-secret
WEBHOOK_BASE_URL=http://localhost:8000/api/v1
WEBHOOK_CONTRACT_EXPIRY_URL=${WEBHOOK_BASE_URL}/webhooks/contract-expiry
WEBHOOK_MILESTONE_URL=${WEBHOOK_BASE_URL}/webhooks/milestone-alert
WEBHOOK_COMPLIANCE_URL=${WEBHOOK_BASE_URL}/webhooks/compliance-alert
WEBHOOK_REPORT_URL=${WEBHOOK_BASE_URL}/webhooks/report-ready

# Alert Thresholds (comma-separated days)
EXPIRY_ALERT_DAYS=30,14,7
MILESTONE_ALERT_DAYS=7,3,1

# Scheduler
SCHEDULER_TIMEZONE=UTC

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8080"]
