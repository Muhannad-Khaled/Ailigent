<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- HR Insights Form View -->
    <record id="view_hr_insights_form" model="ir.ui.view">
        <field name="name">ailigent.hr.insights.form</field>
        <field name="model">ailigent.hr.insights</field>
        <field name="arch" type="xml">
            <form string="HR Insights">
                <header>
                    <button name="action_generate"
                            string="Generate Report"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ['draft', 'error']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,generating,generated"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <!-- Error -->
                    <div class="alert alert-danger" invisible="not analysis_error">
                        <field name="analysis_error" readonly="1"/>
                    </div>

                    <group>
                        <group string="Report Configuration">
                            <field name="report_type"/>
                            <field name="date_from"/>
                            <field name="date_to"/>
                        </group>
                        <group string="Filters">
                            <field name="department_ids" widget="many2many_tags"/>
                            <field name="generated_at" invisible="state != 'generated'"/>
                        </group>
                    </group>

                    <notebook invisible="state != 'generated'">
                        <page string="Executive Summary" name="summary">
                            <field name="executive_summary" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Key Metrics" name="metrics">
                            <field name="metrics_display" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Key Findings" name="findings">
                            <field name="key_findings_display" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Recommendations" name="recommendations">
                            <field name="recommendations_display" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- HR Insights Tree View -->
    <record id="view_hr_insights_tree" model="ir.ui.view">
        <field name="name">ailigent.hr.insights.tree</field>
        <field name="model">ailigent.hr.insights</field>
        <field name="arch" type="xml">
            <tree string="HR Insights">
                <field name="name"/>
                <field name="report_type"/>
                <field name="date_from"/>
                <field name="date_to"/>
                <field name="state" widget="badge"/>
                <field name="generated_at"/>
            </tree>
        </field>
    </record>

    <!-- HR Insights Action -->
    <record id="action_hr_insights" model="ir.actions.act_window">
        <field name="name">HR Insights</field>
        <field name="res_model">ailigent.hr.insights</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Generate AI-powered HR insights
            </p>
        </field>
    </record>
</odoo>
