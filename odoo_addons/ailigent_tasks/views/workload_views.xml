<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Workload Snapshot Form View -->
    <record id="view_workload_snapshot_form" model="ir.ui.view">
        <field name="name">ailigent.workload.snapshot.form</field>
        <field name="model">ailigent.workload.snapshot</field>
        <field name="arch" type="xml">
            <form string="Workload Analysis">
                <header>
                    <button name="action_analyze"
                            string="Analyze Workload"
                            type="object"
                            class="btn-primary"
                            invisible="state not in ['draft', 'error']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,analyzing,analyzed"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1><field name="name"/></h1>
                    </div>

                    <!-- Balance Score -->
                    <div class="alert alert-info" invisible="state != 'analyzed'">
                        <div class="row text-center">
                            <div class="col-md-4">
                                <h2><field name="balance_score" readonly="1"/><small>/100</small></h2>
                                <span class="text-muted">Workload Balance Score</span>
                            </div>
                        </div>
                    </div>

                    <!-- Error -->
                    <div class="alert alert-danger" invisible="not analysis_error">
                        <field name="analysis_error" readonly="1"/>
                    </div>

                    <group>
                        <group string="Filters">
                            <field name="project_ids" widget="many2many_tags"/>
                            <field name="department_ids" widget="many2many_tags"/>
                        </group>
                        <group string="Info" invisible="state != 'analyzed'">
                            <field name="analyzed_at"/>
                        </group>
                    </group>

                    <notebook invisible="state != 'analyzed'">
                        <page string="Summary" name="summary">
                            <field name="summary" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Overloaded" name="overloaded">
                            <field name="overloaded_display" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Underutilized" name="underutilized">
                            <field name="underutilized_display" nolabel="1" readonly="1"/>
                        </page>

                        <page string="Recommendations" name="recommendations">
                            <field name="recommendations_display" nolabel="1" readonly="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Workload Snapshot Tree View -->
    <record id="view_workload_snapshot_tree" model="ir.ui.view">
        <field name="name">ailigent.workload.snapshot.tree</field>
        <field name="model">ailigent.workload.snapshot</field>
        <field name="arch" type="xml">
            <tree string="Workload Analyses">
                <field name="name"/>
                <field name="balance_score" widget="progressbar"/>
                <field name="state" widget="badge"/>
                <field name="analyzed_at"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <!-- Workload Snapshot Action -->
    <record id="action_workload_snapshot" model="ir.actions.act_window">
        <field name="name">Workload Analysis</field>
        <field name="res_model">ailigent.workload.snapshot</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Analyze team workload distribution
            </p>
            <p>
                Use AI to analyze workload balance across your team and get
                recommendations for optimization.
            </p>
        </field>
    </record>
</odoo>
