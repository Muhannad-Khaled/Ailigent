<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Task Settings Form View -->
    <record id="view_task_settings_form" model="ir.ui.view">
        <field name="name">ailigent.task.settings.form</field>
        <field name="model">ailigent.task.settings</field>
        <field name="arch" type="xml">
            <form string="Task Settings">
                <sheet>
                    <group>
                        <group string="API Configuration">
                            <field name="name"/>
                            <field name="api_url" placeholder="http://localhost:8000"/>
                            <field name="api_key" password="True"/>
                            <field name="active"/>
                        </group>
                        <group string="Actions">
                            <button name="action_test_connection"
                                    string="Test Connection"
                                    type="object"
                                    class="btn-primary"
                                    icon="fa-plug"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Task Settings Tree View -->
    <record id="view_task_settings_tree" model="ir.ui.view">
        <field name="name">ailigent.task.settings.tree</field>
        <field name="model">ailigent.task.settings</field>
        <field name="arch" type="xml">
            <tree string="Task Settings">
                <field name="name"/>
                <field name="api_url"/>
                <field name="active"/>
            </tree>
        </field>
    </record>

    <!-- Task Settings Action -->
    <record id="action_task_settings" model="ir.actions.act_window">
        <field name="name">Task API Settings</field>
        <field name="res_model">ailigent.task.settings</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
