# HR Agent Configuration
# Copy this file to .env and fill in your values

# ===================
# Application Settings
# ===================
APP_NAME=hr-agent
APP_ENV=development
DEBUG=true
API_KEY=your-secure-api-key-here
PORT=8002
HOST=0.0.0.0

# ===================
# Odoo Configuration (shared with other Ailigent services)
# ===================
ODOO_URL=http://localhost:8069
ODOO_DB=odoo_db
ODOO_USER=admin
ODOO_PASSWORD=your-odoo-password

# ===================
# Redis Configuration (optional, for caching)
# ===================
REDIS_URL=redis://localhost:6379/1
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=1

# ===================
# Google Gemini AI
# ===================
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-2.0-flash

# ===================
# Email (SMTP)
# ===================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=hr@yourcompany.com

# ===================
# Webhooks
# ===================
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_INTERVIEW_URL=https://your-webhook.com/interviews
WEBHOOK_APPRAISAL_URL=https://your-webhook.com/appraisals
WEBHOOK_REPORT_URL=https://your-webhook.com/reports

# ===================
# HR Manager Notifications (comma-separated)
# ===================
HR_MANAGER_EMAILS=hr-manager@company.com,hr-director@company.com

# ===================
# Integration with other Ailigent services
# ===================
TASK_MANAGEMENT_URL=http://localhost:8000
TASK_MANAGEMENT_API_KEY=your-task-mgmt-api-key

# ===================
# CORS
# ===================
ALLOWED_ORIGINS=*

# ===================
# Scheduler Settings
# ===================
SCHEDULER_TIMEZONE=UTC
APPRAISAL_REMINDER_HOUR=9
INTERVIEW_REMINDER_HOURS=4
ATTENDANCE_CHECK_HOUR=19
WEEKLY_REPORT_DAY=monday
WEEKLY_REPORT_HOUR=7

# ===================
# Logging
# ===================
LOG_LEVEL=INFO

# ===================
# File Upload
# ===================
MAX_CV_SIZE_MB=10
ALLOWED_CV_EXTENSIONS=pdf,docx

# ===================
# Alert Thresholds
# ===================
APPRAISAL_REMINDER_DAYS=7,3,1
INTERVIEW_REMINDER_HOURS_BEFORE=48,24
